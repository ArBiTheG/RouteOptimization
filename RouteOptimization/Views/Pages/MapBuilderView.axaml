<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:local="clr-namespace:RouteOptimization.Controls"
             xmlns:vm="clr-namespace:RouteOptimization.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RouteOptimization.Views.Pages.MapBuilderView">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MapBuilderViewModel />
  </Design.DataContext>
  <i:Interaction.Behaviors>
    <ia:EventTriggerBehavior EventName="Loaded">
      <ia:InvokeCommandAction Command="{Binding LoadCommand}" />
    </ia:EventTriggerBehavior>
  </i:Interaction.Behaviors>
  <Grid Margin="2">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="256"/>
    </Grid.ColumnDefinitions>
    <Border Margin="2" Grid.Column="0" CornerRadius="4" BorderThickness="1" BorderBrush="Black" ClipToBounds="True">
      <local:MapConstructorControl x:Name="map" MapSource="{Binding Map}"/>
    </Border>

    <Border Grid.Column="1">
      <StackPanel>
        <Border Margin="2" CornerRadius="4" BorderThickness="1" BorderBrush="Black" Padding="8,4">
          <StackPanel>
            <TextBlock Margin="0,0,0,8">Управление точками:</TextBlock>
            <Button Command="{Binding AddCommand}">Добавить точку</Button>
            <Button Command="{Binding EditCommand}" CommandParameter="{Binding SelectedVertex, ElementName=map}">Рудактировать точку</Button>
            <Button Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedVertex, ElementName=map}">Удалить точку</Button>
          </StackPanel>
        </Border>

        <Border Margin="2" CornerRadius="4" BorderThickness="1" BorderBrush="Black" Padding="8,4">
          <StackPanel>
            <TextBlock Margin="0,0,0,8">Координаты местности:</TextBlock>
            <Grid ColumnDefinitions="*,*">
              <TextBlock Grid.Column="0" Text="X"/>
              <TextBlock Grid.Column="1" Text="{Binding Scene.X, StringFormat=0.0}"/>
            </Grid>
            <Grid ColumnDefinitions="*,*">
              <TextBlock Grid.Column="0" Text="Y"/>
              <TextBlock Grid.Column="1" Text="{Binding Scene.Y, StringFormat=0.0}"/>
            </Grid>
            <Grid ColumnDefinitions="*,*">
              <TextBlock Grid.Column="0" Text="Увеличение"/>
              <TextBlock Grid.Column="1" Text="{Binding Scene.Zoom, StringFormat=\{0:P0\}}"/>
            </Grid>
          </StackPanel>
        </Border>
      </StackPanel>
    </Border>
    
  </Grid>
</UserControl>
